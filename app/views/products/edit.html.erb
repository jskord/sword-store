<h1>Edit</h1>
<%= form_tag '/products', method: :post do %>
  <div class = "form-group">
    <%= label_tag :title  %>
    <%= text_field_tag :title, nil, class: 'form-control' %>
  </div>
   <div class = "form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, nil, class: 'form-control' %>
  </div>
   <div class = "form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, nil, class: 'form-control' %>
  </div>
   <div class = "form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, nil, class: 'form-control' %>
  </div>
  <%=submit_tag "Add Sword", class: "btn btn-success" %>
<% end %>